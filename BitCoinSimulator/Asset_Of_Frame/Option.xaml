<UserControl x:Class="BitCoinSimulator.Asset_Of_Frame.Option"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BitCoinSimulator.Asset_Of_Frame"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Grid Height="30"></Grid>
            <TextBlock Text="Sound" HorizontalAlignment="Center" FontSize="30">
            </TextBlock>
            <Grid Height="30"></Grid>
            <Button Content="Save" Command="" FontSize=" 30 " Width="160"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Grid Height="45"></Grid>
            <Slider Minimum="0" Maximum="255"/>
            <Grid Height="40"></Grid>
            <TextBlock FontSize="25" Text=" 게임의 현재 진행상황을 저장합니다."/>
        </StackPanel>
    </Grid>
</UserControl>
