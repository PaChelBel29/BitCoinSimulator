<Page x:Class="BitCoinSimulator.View.Tutorial_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BitCoinSimulator.View"
      xmlns:cmd="clr-namespace:BitCoinSimulator.ViewModel.Commands"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="Tutorial_Page">
    <!--201911907 CSE Div. 조훈희-->
    <Page.Resources>
        <cmd:Page_1_To_2_Command x:Key="1to2"/>
    </Page.Resources>
    <Grid x:Name="tutorial_back">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Scene1.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Tutorial_Chat"
               Grid.Row="1" 
               Margin="15" 
               Style="{StaticResource TutorialText}"
               Command="{Binding Source={StaticResource 1to2}}"
               Content="당신은 군대에서 선임이 알려준 비트코인을 하다가 월급은 물론이고 사회에서 벌었던 돈까지 탕진했습니다."
               >
        </Button>
    </Grid>
</Page>

