<Page x:Class="BitCoinSimulator.View.Tutorial_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BitCoinSimulator.View"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="Tutorial_Page">
    <Grid x:Name="tutorial_back">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Scene1.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="Tutorial_Chat" Grid.Row="1" Margin="15" Style="{StaticResource TutorialText}" MouseLeftButtonDown="Tutorial_Chat_MouseLeftButtonDown">
            최전방 GP, 야간 철책점검 작전 중이다. 이제 10월인데 너무 춥다...
        </Label>
        
    </Grid>
</Page>

