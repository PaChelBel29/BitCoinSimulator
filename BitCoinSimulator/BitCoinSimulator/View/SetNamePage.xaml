<Page x:Class="BitCoinSimulator.View.SetNamePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmd="clr-namespace:BitCoinSimulator.ViewModel.Commands"
        xmlns:local="clr-namespace:BitCoinSimulator.View"
        xmlns:vm="clr-namespace:BitCoinSimulator.ViewModel"
       Title="당신의 이름을 알려주세요" Height="400" Width="600">
    <!--201911907 CSE Div. 조훈희-->
    <Page.Resources>
        <cmd:SetTheNameCommand x:Key="setname"/>
    </Page.Resources>
    <StackPanel Background="#FFDDFFDD">
        <Grid Height="150"/>
        <TextBox x:Name="txt"></TextBox>
        <Button Content="입력" x:Name="Select" 
                Command="{Binding Source={StaticResource setname}}" 
                CommandParameter="{Binding ElementName=txt}"
                />
    </StackPanel>
</Page>