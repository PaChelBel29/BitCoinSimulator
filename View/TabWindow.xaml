                                   Foreground="DarkSlateGray"
                                   FontWeight="Normal"
                                   Margin="10 10 0 0"
                                   Grid.Row="1"
                                   Grid.ColumnSpan="2"/>

                        <TextBlock Text="{Binding Source={StaticResource usrvm}, Path=Usr.UserMoney, Converter={StaticResource Pconv}}"
