        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:mycls="clr-namespace:BITCOIN_SIMULATOR_TAB_.Model"
        xmlns:vm="clr-namespace:BITCOIN_SIMULATOR_TAB_.ViewModel"
        xmlns:tabconverter="clr-namespace:BITCOIN_SIMULATOR_TAB_.ViewModel.Converters"
        mc:Ignorable="d"
        Title="BITCOIN SIMULATOR" Height="768" Width="1024"
        WindowStartupLocation="CenterScreen">
