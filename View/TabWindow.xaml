                                   Foreground="DarkSlateGray"
                                   FontWeight="ExtraBold"
                                   Margin="10 5 0 0"
                                   Grid.Row="2"
                                   Grid.ColumnSpan="2"/>

                        <TextBlock Text="총매수"
                                   FontSize="20"
                                   Foreground="DarkSlateGray"
                                   FontWeight="Normal"
                                   Margin="10 10 0 0"
