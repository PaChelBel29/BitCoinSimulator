                                Grid.ColumnSpan="6" 
                                Grid.RowSpan="6" 
                                Background="White"/>


                        <Button Content="NEXT"
                                VerticalAlignment="Bottom"
                                Background="#FFECECEC"
                                FontSize="20"
                                Grid.Column="5"
                                Grid.Row="10"
                                Command="{Binding Path=NextCommand}"/>


                        <TextBlock Text="내 보유자산"
