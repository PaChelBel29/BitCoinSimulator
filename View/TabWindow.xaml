                                            RateProperty="{Binding ElementName=TL4,Path=Content}"
                                            FontSize="15"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Center"
                                            Margin="0 20 0 0"/>
                            <mycls:TabLabel x:Name="TL5" 
