<Page x:Class="BITCOIN_SIMULATOR_TAB_.View.SetNamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:cmd="clr-namespace:BITCOIN_SIMULATOR_TAB_.ViewModel.Commands"
      xmlns:local="clr-namespace:BITCOIN_SIMULATOR_TAB_.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
    Title="당신의 이름을 알려주세요" Height="400" Width="600">
    <!--201911907 CSE Div. 조훈희-->
    <Page.Resources>
        <cmd:SetTheNameCommand x:Key="setname"/>
    </Page.Resources>
    <StackPanel Background="#FFDDFFDD">
        <Grid Height="150"/>
        <TextBlock
            Text="크흠! 죄송합니다... 당신의 이름을 물어보는 것을 까먹었네요... 늦었지만 알려주시겠습니까?"/>
        <TextBox x:Name="txt"></TextBox>
        <Button Content="입력" x:Name="Select" 
                Command="{Binding Source={StaticResource setname}}" 
                CommandParameter="{Binding ElementName=txt}"
                />
    </StackPanel>
</Page>
